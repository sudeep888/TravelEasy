# frontend/.env - Frontend Environment Variables

# ============================================
# Environment Configuration
# ============================================
NODE_ENV=production

# ============================================
# API Configuration
# ============================================
REACT_APP_API_URL=http://localhost:3001/api
# For production: https://api.passengerrights.com/v1
# For staging: https://staging-api.passengerrights.com/v1

# ============================================
# Analytics & Monitoring
# ============================================
REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
REACT_APP_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

REACT_APP_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
REACT_APP_SENTRY_ENVIRONMENT=production

REACT_APP_HOTJAR_ID=xxxxxxxx
REACT_APP_HOTJAR_SNIPPET_VERSION=6

# ============================================
# Feature Flags
# ============================================
REACT_APP_ENABLE_ADMIN=false
REACT_APP_ENABLE_PREMIUM_FEATURES=false
REACT_APP_ENABLE_SOCIAL_SHARING=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# ============================================
# SEO & Social Media
# ============================================
REACT_APP_SITE_URL=https://passengerrights.com
REACT_APP_SITE_NAME=Airport Passenger Rights & Baggage Calculator
REACT_APP_SITE_DESCRIPTION=Calculate baggage allowance, know your passenger rights, generate complaint letters for flight issues.
REACT_APP_TWITTER_HANDLE=@PassengerRights
REACT_APP_FACEBOOK_APP_ID=xxxxxxxxxxxxxxx

# ============================================
# Performance & Caching
# ============================================
REACT_APP_CACHE_DURATION=3600
REACT_APP_API_TIMEOUT=30000
REACT_APP_ENABLE_SERVICE_WORKER=true

# ============================================
# Third-party Integrations
# ============================================
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_RECAPTCHA_SITE_KEY=6LcxxxxxAAAAAxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_MAPBOX_TOKEN=pk.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# Internationalization
# ============================================
REACT_APP_DEFAULT_LOCALE=en
REACT_APP_SUPPORTED_LOCALES=en,hi,ta,te,ml,kn,bn
REACT_APP_DEFAULT_CURRENCY=INR

# ============================================
# Airline Data
# ============================================
REACT_APP_DEFAULT_AIRLINE=AI
REACT_APP_DEFAULT_COUNTRY=IN

# ============================================
# Development Only (Override in production)
# ============================================
# REACT_APP_DEBUG=true
# REACT_APP_LOG_LEVEL=debug
# REACT_APP_DISABLE_CACHE=true